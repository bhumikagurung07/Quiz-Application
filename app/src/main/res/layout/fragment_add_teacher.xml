<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/txtheadteach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Teacher account"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"

            android:orientation="vertical"
            android:padding="24dp">

            <EditText
                android:id="@+id/Teacher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Teacher Name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Provide Username"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Provide Password"
                android:textSize="20sp" />


            <Button
                android:id="@+id/add_teacher"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:gravity="center"
                android:text="Add Teacher"
                android:textColor="@color/black"
                android:textColorLink="#7F2A2A"
                android:textSize="24sp"
                app:shapeAppearance="@style/Animation.Design.BottomSheetDialog" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
