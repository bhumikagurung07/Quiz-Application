<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"> <!-- Ensures child takes full height -->

    <RelativeLayout
        android:id="@+id/fragment_tech_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="90dp"
        android:gravity="center">

        <TextView
            android:id="@+id/select_subject_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sonsie_one"
            android:text="Subjects"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/SubjectGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:layout_below="@id/select_subject_text"
            android:verticalSpacing="16dp"
            android:horizontalSpacing="16dp"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:padding="16dp"
            android:layout_above="@id/add_subject_button"
            android:isScrollContainer="false"
            android:scrollbars="none" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_subject_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/baseline_add_circle_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>

</ScrollView>
