<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textQId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q. ID"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="90dp"
            android:background="@drawable/custom_edittext1"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext1"
            android:hint="Question"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtOptionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext1"
            android:hint="Option A"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtOptionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext1"
            android:hint="Option B"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtOptionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext1"
            android:hint="Option C"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtOptionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext1"
            android:hint="Option D"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_blue"
            android:background="@drawable/custom_edittext1"
            android:hint="Correct Answer"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Question"
            android:layout_marginTop="8dp"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Question"
            android:layout_marginTop="8dp"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
